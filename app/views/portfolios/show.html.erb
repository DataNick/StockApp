<h1>Trades</h1>
<table>
  <thead>
    <tr>
      <th>Stock</th>
      <th>Last Trade Price</th>
      <th>Name</th>
      <th>Stock Exchange</th>
      <th>Number of Shares</th>
      <th>Buy Price</th>
      <th>Gain/Loss</th>
      <th>Sell</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<tbody id = "transactions">
  <%= render @transactions %>
</tbody>
</table>
<%= link_to 'Update Stocks', mass_update_path, method: :patch, class: "btn btn-primary" %>
<br/>
<h3>Make a Trade</h3>
<br/>
<%= render 'transactions/form' %>

