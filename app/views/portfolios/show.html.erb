<p>
  <strong>Name:</strong>
  <%= @portfolio.name %>
</p>

<p>
  <strong>Amount:</strong>
  <%= number_to_currency(@portfolio.amount) %>
</p>
<br/>
<table>
  <thead>
    <tr>
      <th>Stock</th>
      <th>Buy Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<tbody>
<% @portfolio.transactions.each do |trade| %>
  <tr>
    <td><%= trade.stock_id %></td>
    <td><%= trade.buy_price %></td>
  </tr>
<% end %>
</tbody>
</table>
<br/>
<table>
  <thead>
    <tr>
      <th>Stock</th>
      <th>Last Trade Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<tbody>
<% @portfolio.transactions.each do |trans| %>
  <tr>
    <td><%= trans.stock_id %></td>
    <td><%=trans.get_price(trans.stock_id.inspect)['query']['results']['quote']['LastTradePriceOnly'] %></td>
  </tr>
<% end %>
</tbody>
</table>
<br/>

<%= link_to 'New Transaction', new_portfolio_transaction_path(@portfolio) %> |
<%= link_to 'Edit', edit_portfolio_path(@portfolio) %> |
<%= link_to 'Back', portfolios_path %>
