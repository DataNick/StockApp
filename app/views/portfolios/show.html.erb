<p>
  <strong>Name:</strong>
  <%= @portfolio.name %>
</p>

<p>
  <strong>Value:</strong>
  <%= number_to_currency(@portfolio.amount) %>
  <%= link_to 'Update Value', portfolio_update_amount_path(@portfolio), class: "btn btn-primary" %>
</p>

<br/>

<br/>
<table>
  <thead>
    <tr>
      <th>Stock</th>
      <th>Last Trade Price</th>
      <th>Name</th>
      <th>Stock Exchange</th>
      <th>Number of Shares</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<tbody>
<% @portfolio.transactions.each do |trans| %>
  <tr>
    <td class="col-md-1"><%= trans.stock.symbol %></td>
    <td class="col-md-1"><%= number_to_currency(trans.stock.last_price) %></td>
    <td class="col-md-1"><%= trans.stock.name %></td>
    <td class="col-md-1"><%= trans.stock.stock_exchange %></td>
    <td class="col-md-1"><%= trans.num_of_shares %></td>
  </tr>
<% end %>
</tbody>
</table>

<br/>
<%= render 'transactions/form' %>

<%= link_to 'New Transaction', new_portfolio_transaction_path(@portfolio) %> |
<%= link_to 'Edit', edit_portfolio_path(@portfolio) %> |
<%= link_to 'Back', portfolios_path %>
